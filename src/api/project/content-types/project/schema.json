{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "project",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "filter": {
      "type": "enumeration",
      "enum": [
        "web",
        "design",
        "craft"
      ],
      "required": true
    },
    "showcase": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "showcaseImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "size": {
      "type": "string",
      "default": "md:w-6/12 lg:w-4/12"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "subtitle": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "tools": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tool.tool"
    },
    "link1": {
      "type": "string"
    },
    "link2": {
      "type": "string"
    },
    "link1Name": {
      "type": "string"
    },
    "link2Name": {
      "type": "string"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "order": {
      "type": "integer",
      "required": true,
      "unique": true
    }
  }
}
